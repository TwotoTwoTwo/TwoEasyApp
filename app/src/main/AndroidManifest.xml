<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.wsjiu.easychange">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyChange"
        android:usesCleartextTraffic="true">
        <activity
            android:name="cn.wsjiu.easychange.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.EasyChange.NoActionBar">
        </activity>
        <activity android:name="cn.wsjiu.easychange.activity.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.wsjiu.easychange.activity.WelcomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.EasyChange.Fullscreen">
        </activity>
    </application>

</manifest>